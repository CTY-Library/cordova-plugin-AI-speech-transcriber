<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-AI-speech-transcriber"
        version="1.0.0">
    <name>AISpeechTranscriber</name>
    <description>基于阿里云SDK的Cordova语音转写插件</description>
    <author>CTY-Library</author>
    <license>MIT</license>
    <keywords>cordova, speech, transcribe, aliyun, AI</keywords>
    <repo>https://github.com/CTY-Library/cordova-plugin-AI-speech-transcriber</repo>
    <!-- 插件配置参数 -->  
    <preference name="SERVICEURL"/>
    <preference name="APPKEY"/>
    <!-- JavaScript模块 -->
    <js-module name="AISpeechTranscriber" src="www/AISpeechTranscriber.js">
        <clobbers target="AISpeechTranscriber" />
    </js-module>

    <!-- 平台配置：Android -->
    <platform name="android">
        <!-- 注入AI语音识别所需的Key和token到AndroidManifest.xml -->
        <config-file target="AndroidManifest.xml" parent="/manifest/application">          
            <meta-data android:name="com.plugin.ai.speech.SERVICEURL" android:value="$SERVICEURL" />            
            <meta-data android:name="com.plugin.ai.speech.APPKEY" android:value="$APPKEY" />
        </config-file>
        <!-- 源文件 -->
        <source-file src="src/android/AISpeechTranscriber.java"  target-dir="src/com/plugin/aliyun/aispeech" />    
        <source-file src="src/android/AccessToken.java"    target-dir="src/com/plugin/aliyun/aispeech" />   
        <source-file src="src/android/HttpRequest.java"     target-dir="src/com/plugin/aliyun/aispeech" />   
        <source-file src="src/android/HttpResponse.java"    target-dir="src/com/plugin/aliyun/aispeech" />   
        <source-file src="src/android/HttpUtil.java"    target-dir="src/com/plugin/aliyun/aispeech" />   
        <source-file src="src/android/Signer.java"     target-dir="src/com/plugin/aliyun/aispeech" />  
        <source-file src="src/android/Auth.java" target-dir="src/com/plugin/aliyun/aispeech" />
        <source-file src="src/android/CommonUtils.java" target-dir="src/com/plugin/aliyun/aispeech" />

        <!-- 阿里云SDK依赖包 -->
        <lib-file src="src/android/libs/nuisdk-release.aar" />
        <!-- 权限配置 -->
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.RECORD_AUDIO" />
            <uses-permission android:name="android.permission.READ_PHONE_STATE" /> 
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />   
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />            
        </config-file>        
        <!-- 构建配置 -->
        <framework src="src/android/ai-speech-transcriber-build.gradle" custom="true" type="gradleReference" />         
        <!-- 插件入口 -->
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="AISpeechTranscriber">
                <param name="android-package" value="com.plugin.aliyun.aispeech.AISpeechTranscriber" />
            </feature>
        </config-file>
    </platform>

    <!-- iOS 平台配置 -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="AISpeechTranscriber">
                <param name="ios-package" value="AISpeechTranscriber" />
            </feature>
            <preference name="serviceurl" value="$SERVICEURL"/>
            <preference name="appkey" value="$APPKEY"/>
        </config-file>
        
        <!-- 源文件 -->
        <source-file src="src/ios/AISpeechTranscriber.h" />
        <source-file src="src/ios/AISpeechTranscriber.m" />
        
        <!-- 引入阿里云SDK（需将SDK文件放入指定目录） -->
        <framework src="src/ios/libs/nuisdk.framework" embed="true" />
        <framework src="AVFoundation.framework" /> <!-- 音频权限依赖 -->
        <framework src="CoreAudio.framework" />
        <framework src="AudioToolbox.framework" />
        
        <!-- 权限配置 -->
        <config-file target="*-Info.plist" parent="NSMicrophoneUsageDescription">
            <string>需要使用麦克风进行语音转写</string>
        </config-file>
    </platform>
</plugin>